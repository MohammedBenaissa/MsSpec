    *                           REXS PARAMETERS                              *
    **************************************************************************


             CARD N. 1 (EDGE,IE,IPHI)
                       FORMAT(8X,A1,I1,9X,I1,9X,I1)

    EDGE   = EDGE USED FOR THE XAS CALCULATION : K1,L1,L2,M1,M2,M3,M4,...
             (NOTE THAT THE 1s EDGE SHOULD BE WRITTEN EITHER 'K1' OR 'K ')

    IPHI   = SWITCH: (=1) TO GENERATE AN AZIMUTHAL SPECTRUM;
                     (=0) OTHERWISE

    IE     = SWITCH: (=1) TO GENERATE AN ENERGY SPECTRUM;
                     (=0) OTHERWISE


             CARD N. 2 (THLUM_I,PHILUM_I,IPOL_I,ISR_I)
                       FORMAT(6X,F7.2,3X,F7.2,5X,I2,5X,A5)

    THLUM_I  = POLAR ANGLE OF THE INCIDENT LIGHT VECTOR (DEGREES)

    PHILUM_I = AZIMUTHAL ANGLE OF THE INCIDENT LIGHT VECTOR (DEGREES)

    IPOL_I   = SWITCH: POLARIZATION OF THE INCIDENT BEAM
                 (= 0)  NON POLARIZED LIGHT
                 (= 1)  LINEARLY POLARIZED LIGHT (POLAR. IN LIGHT0z PLANE)
                 (=-1)  LINEARLY POLARIZED LIGHT (POLAR. IN x0y PLANE)
                 (= 2)  CIRCULARLY POLARIZED LIGHT ====> DICHROISM

    CSR_I    = SWITCH: TO SELECT THE CHANNELS FOR THE EXCITATION PROCESS:
                         (INITIAL STATE ---> INTERMEDIATE STATE)
               IT IS A FIVE-CHARACTER STRING OF 0/1 DIGITS THAT READS
               AS: E1 E2 E3 M1 M2
               0 MEANS CORRESPONDING MATRIX ELEMENTS NOT CONSIDERED
               1 MEANS CORRESPONDING MATRIX ELEMENTS COMPUTED
               EX. : 10000       ---> ONLY DIPOLE TERM E1 COMPUTED
                     11000       ---> E1 + E2 COMPUTED
               SINGLE (DOMINANT) CHANNEL CASE:
                     +1>E1       ---> ONLY +1 CHANNEL OF E1
                     -1>E3       ---> ONLY -1 CHANNEL OF E3
               EXCEPTIONS:
                     20000       ---> CORRECTION TERM FOR E1 ALSO TAKEN INTO ACCOUNT
                     00000       ---> TEST CASE: NO MATRIX ELEMENTS COMPUTED


             CARD N. 3 (THLUM_O,PHILUM_O,IPOL_O,ISR_O)
                       FORMAT(6X,F7.2,3X,F7.2,5X,I2,8X,I2)

    THLUM_O  = POLAR ANGLE OF THE OUTGOING LIGHT VECTOR (DEGREES)

    PHILUM_O = AZIMUTHAL ANGLE OF THE OUTGOING LIGHT VECTOR (DEGREES)

    IPOL_O   = SWITCH: POLARIZATION OF THE OUTGOING BEAM
                 (= 0)  NON POLARIZED LIGHT
                 (= 1)  LINEARLY POLARIZED LIGHT (POLAR. IN LIGHT0z PLANE)
                 (=-1)  LINEARLY POLARIZED LIGHT (POLAR. IN x0y PLANE)
                 (= 2)  CIRCULARLY POLARIZED LIGHT ====> DICHROISM

    CSR_O    = SWITCH: TO SELECT THE CHANNELS FOR THE:
                         (INTERMEDIATE STATE ---> FINAL STATE)
               IT IS A FIVE-CHARACTER STRING OF 0/1 DIGITS THAT READS
               AS: E1 E2 E3 M1 M2
               0 MEANS CORRESPONDING MATRIX ELEMENTS NOT CONSIDERED
               1 MEANS CORRESPONDING MATRIX ELEMENTS COMPUTED
               EX. : 10000       ---> ONLY DIPOLE TERM E1 COMPUTED
                     11000       ---> E1 + E2 COMPUTED
               SINGLE (DOMINANT) CHANNEL CASE:
                     +1>E1       ---> ONLY +1 CHANNEL OF E1
                     -1>E3       ---> ONLY -1 CHANNEL OF E3
               EXCEPTIONS:
                     20000       ---> CORRECTION TERM FOR E1 ALSO TAKEN INTO ACCOUNT
                     00000       ---> TEST CASE: NO MATRIX ELEMENTS COMPUTED


            CARD N. 4 (NE,E_INI,E_FIN)
                       FORMAT(7X,I3,6X,F7.2,3X,F7.2)

    NE    = NUMBER OF ENERGY POINTS

    E_INI = INITIAL VALUE OF THE PHOTON ENERGY (IN eV)

    E_FIN = FINAL VALUE OF THE PHOTON ENERGY (IN eV)



            CARD N. 5 (NPHI,PHI_FIN)
                       FORMAT(7X,I3,6X,F7.2)

    NPHI    = NUMBER OF PHI POINTS FOR AZIMUTHAL SCAN

    PHI_FIN = FINAL VALUE FOR AZIMUTHAL SCAN (PHI_INI = 0)
                       (IN DEGREES)





